<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.voidustries.poly.GUI.Controller"
          alignment="CENTER" hgap="10"
          vgap="10">

    <padding>

        <Insets top="15"
                bottom="15"
                left="15"
                right="15"/>

    </padding>

    <!-- Input Panel -->

    <Label text="RSS URL:"
           GridPane.columnIndex="0"
           GridPane.rowIndex="0"/>
    <TextField fx:id="rss_url"
               GridPane.columnIndex="0"
               GridPane.rowIndex="1"/>
    <Label text="Database Location:"
           GridPane.columnIndex="0"
           GridPane.rowIndex="2"/>
    <TextField fx:id="database_location"
               GridPane.columnIndex="0"
               GridPane.rowIndex="3"/>
    <Label text="TV Show DIR:"
           GridPane.columnIndex="0"
           GridPane.rowIndex="4"/>
    <TextField fx:id="show_dir"
               GridPane.columnIndex="0"
               GridPane.rowIndex="5"/>

    <!-- V Separator -->

    <Separator GridPane.columnIndex="1"
               GridPane.rowIndex="0"
               GridPane.rowSpan="6"
               orientation="VERTICAL"/>

    <!-- Timer Panel-->

    <Text text="Update RSS Every X Hours"
          textAlignment="RIGHT"
          GridPane.columnIndex="2"
          GridPane.rowIndex="1"/>
    <Spinner fx:id="rss_timer"
             editable="true"
             initialValue="1"
             maxWidth="100"
             GridPane.columnIndex="3"
             GridPane.rowIndex="1">
        <valueFactory>
            <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="100"/>
        </valueFactory>
    </Spinner>

    <Text text="Try Downloads Every X Hours"
          textAlignment="RIGHT"
          GridPane.columnIndex="2"
          GridPane.rowIndex="2"/>
    <Spinner fx:id="download_timer"
             editable="true"
             maxWidth="100"
             GridPane.columnIndex="3"
             GridPane.rowIndex="2">
        <valueFactory>
            <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="100"/>
        </valueFactory>
    </Spinner>

    <Text text="Switch To F2 After X Tries"
          textAlignment="RIGHT"
          GridPane.columnIndex="2"
          GridPane.rowIndex="3"/>
    <Spinner fx:id="f2_after"
             editable="true"
             maxWidth="100"
             GridPane.columnIndex="3"
             GridPane.rowIndex="3">
        <valueFactory>
            <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="100"/>
        </valueFactory>
    </Spinner>

    <HBox spacing="10"
          alignment="CENTER"
          GridPane.columnIndex="2"
          GridPane.columnSpan="2"
          GridPane.rowIndex="4"
          GridPane.rowSpan="2">

        <Button text="F2 Setup"/>
    </HBox>

    <!-- H Separator -->

    <Separator GridPane.columnIndex="0"
               GridPane.columnSpan="4"
               GridPane.rowIndex="6"
    />

    <!-- Log Panel-->

    <Text text="Log:"
          GridPane.columnIndex="0"
          GridPane.rowIndex="7"/>

    <TextArea fx:id="logField"
              GridPane.columnIndex="0"
              GridPane.columnSpan="4"
              GridPane.rowIndex="8"
              GridPane.rowSpan="3"
              editable="false"
              focusTraversable="false"
    />

    <!-- Choice Buttons -->

    <HBox spacing="10"
          alignment="BOTTOM_RIGHT"
          GridPane.columnIndex="0"
          GridPane.columnSpan="4"
          GridPane.rowIndex="12">

        <Button text="Apply"
        fx:id="apply"
        onMouseClicked="#apply"/>
        <Button text="Cancel"
        fx:id="cancel"/>

    </HBox>

</GridPane>